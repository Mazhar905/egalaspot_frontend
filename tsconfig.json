{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@modules/*": ["modules/*"],
      "@pages/*": ["pages/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/modules/layout/templates/nav/bottomBar.jsx", "src/modules/layout/templates/nav/TopBar.tsx", "src/modules/home/components/featured-products/product-rail/index.jsx", "src/modules/home/components/hero/index.jsx", "src/modules/home/components/categoryBox/index.jsx", "src/modules/products/components/product-preview/index.ssx", "src/app/[countryCode]/(main)/page.jsx", "src/modules/common/components/filter-radio-group/index.jsx"  ],
  "exclude": [
    "node_modules",
    ".next",
    ".nyc_output",
    "coverage",
    "jest-coverage"
  ]
}
